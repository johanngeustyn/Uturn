@model IEnumerable<Uturn.Models.Vehicle>
@{
    ViewData["Title"] = "Vehicles";
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
    <script>
        let table = new DataTable('#vehicles-tbl', {
            ordering: true,
            searchable: true
        });
    </script>
}

<div class="d-flex align-items-center mb-3">
    <div>
        <h1 class="page-header mb-0">Vehicles</h1>
    </div>

    <div class="ms-auto">
        <a asp-action="Create" class="btn btn-theme"><i class="fa fa-plus-circle fa-fw me-1"></i> Add Vehicle</a>
    </div>
</div>

<div class="card">
    <div class="card-body" style="padding: 30px !important">
        <!-- BEGIN table -->
        <div class="table-responsive">
            <!--<table class="table table-hover text-nowrap">-->
            <table id="vehicles-tbl" class="display">
                <thead>
                    <tr>
                        <th class="pt-0 pb-2">Model</th>
                        <th class="pt-0 pb-2">Brand</th>
                        <th class="pt-0 pb-2">Type</th>
                        <th class="pt-0 pb-2">Number Plate</th>
                        <th class="pt-0 pb-2">Available</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.model)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.brand)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.numberPlate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.isAvailable)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-key="@item.key">Edit</a> |
                                <a asp-action="Delete" asp-route-key="@item.key">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- END table -->
    </div>
</div>
